{
  "name": "@shaderfrog/glsl-parser",
  "engines": {
    "node": ">=16"
  },
  "version": "0.0.36",
  "main": "index.js",
  "description": "A GLSL ES 1.0 and 3.0 parser and preprocessor that can preserve whitespace and comments",
  "scripts": {
    "prepare": "npm run build",
    "build": "mkdir -p dist && pegjs -o dist/parser.js parser/glsl-pegjs-grammar.pegjs && pegjs -o dist/preprocssorParser.js preprocessor/preprocessor.pegjs",
    "watch-test": "jest --watch",
    "test": "jest"
  },
  "files": [
    "index.js",
    "core/ast.js",
    "parser/generator.js",
    "preprocessor/generator.js",
    "preprocessor/preprocessor.js",
    "preprocessor/index.js",
    "dist/parser.js",
    "dist/preprocssorParser.js"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "pegjs",
      "glsl"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ShaderFrog/glsl-parser.git"
  },
  "keywords": [
    "glsl",
    "parser",
    "shaderfrog"
  ],
  "author": "Andrew Ray",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ShaderFrog/glsl-parser/issues"
  },
  "homepage": "https://github.com/ShaderFrog/glsl-parser#readme",
  "devDependencies": {
    "jest": "^27.0.2",
    "pegjs": "^0.10.0",
    "prettier": "^2.1.2"
  }
}
