{
  "name": "@shaderfrog/glsl-parser",
  "engines": {
    "node": ">=16"
  },
  "version": "0.0.41",
  "main": "index.js",
  "description": "A GLSL ES 1.0 and 3.0 parser and preprocessor that can preserve whitespace and comments",
  "scripts": {
    "prepare": "npm run build",
    "build": "mkdir -p dist && pegjs -o dist/parser.js parser/glsl-pegjs-grammar.pegjs && pegjs -o dist/preprocssorParser.js preprocessor/preprocessor.pegjs && tsc",
    "watch-test": "jest --watch",
    "test": "jest"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "pegjs",
      "glsl"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ShaderFrog/glsl-parser.git"
  },
  "keywords": [
    "glsl",
    "parser",
    "shaderfrog"
  ],
  "author": "Andrew Ray",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ShaderFrog/glsl-parser/issues"
  },
  "homepage": "https://github.com/ShaderFrog/glsl-parser#readme",
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "@types/jest": "^27.0.2",
    "babel-jest": "^27.2.4",
    "jest": "^27.0.2",
    "pegjs": "^0.10.0",
    "prettier": "^2.1.2",
    "typescript": "^4.4.3"
  }
}
